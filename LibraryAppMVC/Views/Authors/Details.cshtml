@model LibraryAppMVC.Models.Author

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cognome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cognome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazionalita)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazionalita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoB)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LuogoNascita)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LuogoNascita)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoD)
        </dd>
    </dl>
</div>
@if (Model.Books.Count > 0)
{
    <div class="col-md-10">
    Books
    <table>
        <tr>
            <th>Titolo</th> 
            <th>Genere</th>
        </tr>
        
            @{
                foreach (var book in Model.Books)
                {
                    @:<tr> <td> @book.Titolo </td>
                    @: <td> @book.Genere </td> </tr>
                }
            }
        
    </table>
    </div>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
