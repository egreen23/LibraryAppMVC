@model LibraryAppMVC.ViewModels.Loan.CreateLoanViewModel

@{
    ViewData["Title"] = "Create Loan";
}

<h1>Create Loan</h1>


<hr />
<div class="row">

<form asp-action="Search" method="post">
    <div class="row">
        <div class="col-md-8">
             <input name="term" class="form-control" placeholder="Search by title" />
        </div>
        <div class="col-md-4">
            <button type="submit"class="btn btn-info">Search</button>
        </div>
    </div>
</form>
</div>
<div class="row">
    @foreach (var b in @Model.Books)
    {
        <div class="col-md-4">
            <form asp-action="AddBooktoCart" method="post">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        @b.Titolo - @b.AuthorFullname - @b.Prezzo.ToString("C") 
                        <input type="hidden" value="@b.Id" name="bookId" />
                        <button class="btn btn-info" type="submit" disabled="@(b.OutofStock)">Add</button>
                    </div>
                </div>
            </form>
        </div>
    }
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
